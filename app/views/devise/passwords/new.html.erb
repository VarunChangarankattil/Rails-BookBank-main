<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<br><br>
<div class="card" style="text-align: center; margin: auto">
<div class="container login-container" style="width:1000px; margin: auto; ">
            <div class="row">
<div class="col-md-6 login-form-1", style="text-align: center;">
                    <h3>Forgot your password?</h3><br>
                    <form>
                        <div class="form-group">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Your Password *" value="" />
                        </div>
                        <div class="form-group">
                            
                            <%= f.submit "Send me reset password instructions", class:"btnSubmit" %>
                        </div>
<% end %>                        
<%= render "devise/shared/links" %>
                    </form>
                </div>
</div>                
            </div>
</div> 